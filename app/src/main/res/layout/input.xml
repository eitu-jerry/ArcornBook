<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/input_back"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/howmuch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:fontFamily="@font/app_main_font"
        android:textStyle="bold"
        android:text="0원"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/bt2"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/infolimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/app_main_font"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:text="1억 미만 입력 가능"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/howmuch" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toLeftOf="@id/bt0"
        app:layout_constraintBottom_toBottomOf="@+id/bt0"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:background="@drawable/addbt"
        android:scaleType="centerCrop"
        android:layout_marginRight="15dp"
        app:tint="@color/appRed" />
    <ImageButton
        android:id="@+id/ok"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/bt0"
        app:layout_constraintBottom_toBottomOf="@+id/bt0"
        android:src="@drawable/ok_button"
        android:background="@drawable/addbt"
        android:scaleType="fitCenter"
        android:padding="15dp"
        android:layout_marginLeft="15dp" />
    <Button
        android:id="@+id/bt0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/addbt"
        android:text="0"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginBottom="35dp"/>
    <Button
        android:id="@+id/bt1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toLeftOf="@id/bt2"
        app:layout_constraintBottom_toBottomOf="@+id/bt2"
        android:background="@drawable/addbt"
        android:text="1"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginRight="15dp" />
    <Button
        android:id="@+id/bt2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bt5"
        android:background="@drawable/addbt"
        android:text="2"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginBottom="85dp"/>
    <Button
        android:id="@+id/bt3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/bt2"
        app:layout_constraintBottom_toBottomOf="@+id/bt2"
        android:background="@drawable/addbt"
        android:text="3"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginLeft="15dp" />
    <Button
        android:id="@+id/bt4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toLeftOf="@id/bt5"
        app:layout_constraintBottom_toBottomOf="@+id/bt5"
        android:background="@drawable/addbt"
        android:text="4"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginRight="15dp" />
    <Button
        android:id="@+id/bt5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bt8"
        android:background="@drawable/addbt"
        android:text="5"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginBottom="85dp"/>
    <Button
        android:id="@+id/bt6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/bt5"
        app:layout_constraintBottom_toBottomOf="@+id/bt5"
        android:background="@drawable/addbt"
        android:text="6"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginLeft="15dp" />
    <Button
        android:id="@+id/bt7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toLeftOf="@id/bt8"
        app:layout_constraintBottom_toBottomOf="@+id/bt8"
        android:background="@drawable/addbt"
        android:text="7"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginRight="15dp" />
    <Button
        android:id="@+id/bt8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bt0"
        android:background="@drawable/addbt"
        android:text="8"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginBottom="85dp"/>
    <Button
        android:id="@+id/bt9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/bt8"
        app:layout_constraintBottom_toBottomOf="@+id/bt8"
        android:background="@drawable/addbt"
        android:text="9"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/appMainBrown"
        android:fontFamily="@font/app_main_font"
        android:layout_marginLeft="15dp" />




</androidx.constraintlayout.widget.ConstraintLayout>