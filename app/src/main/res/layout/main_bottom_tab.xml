<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tab_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/home"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/home_unsel"
        android:padding="3dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeText"
        app:layout_constraintLeft_toLeftOf="@id/homeText"
        app:layout_constraintRight_toRightOf="@id/homeText"/>
    <TextView
        android:id="@+id/homeText"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_main_font"
        android:includeFontPadding="false"
        android:paddingBottom="2dp"
        android:textColor="@color/appMainDarkBrown"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="홈"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/book"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chart_unsel"
        android:padding="3dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bookText"
        app:layout_constraintLeft_toLeftOf="@id/bookText"
        app:layout_constraintRight_toRightOf="@id/bookText"/>
    <TextView
        android:id="@+id/bookText"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_main_font"
        android:includeFontPadding="false"
        android:paddingBottom="2dp"
        android:textColor="@color/appMainDarkBrown"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="내역"
        app:layout_constraintLeft_toRightOf="@id/homeText"
        app:layout_constraintRight_toLeftOf="@id/reportText"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/report"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chart_unsel"
        android:adjustViewBounds="true"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reportText"
        app:layout_constraintLeft_toLeftOf="@id/reportText"
        app:layout_constraintRight_toRightOf="@id/reportText"/>
    <TextView
        android:id="@+id/reportText"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_main_font"
        android:includeFontPadding="false"
        android:paddingBottom="2dp"
        android:textColor="@color/appMainDarkBrown"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="리포트"
        app:layout_constraintLeft_toRightOf="@id/bookText"
        app:layout_constraintRight_toLeftOf="@id/settingText"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/set_unsel"
        android:adjustViewBounds="true"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/settingText"
        app:layout_constraintLeft_toLeftOf="@id/settingText"
        app:layout_constraintRight_toRightOf="@id/settingText"/>
    <TextView
        android:id="@+id/settingText"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_main_font"
        android:includeFontPadding="false"
        android:paddingBottom="2dp"
        android:textColor="@color/appMainDarkBrown"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="설정"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>