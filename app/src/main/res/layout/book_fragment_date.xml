<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/datePickerFrom"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fromTo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:elevation="2dp"
        android:background="@drawable/date_back"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/appMainDarkBrown"
        android:text="21.06.06" />
    <TextView
        android:id="@+id/fromTo"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/datePickerFrom"
        app:layout_constraintLeft_toRightOf="@id/datePickerFrom"
        app:layout_constraintRight_toLeftOf="@id/datePickerTo"
        app:layout_constraintBottom_toBottomOf="@id/datePickerFrom"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/tGray"
        android:text="~" />
    <TextView
        android:id="@+id/datePickerTo"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/datePickerFrom"
        app:layout_constraintLeft_toRightOf="@id/fromTo"
        app:layout_constraintRight_toLeftOf="@id/go"
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:elevation="2dp"
        android:background="@drawable/date_back"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/appMainDarkBrown"
        android:text="21.06.21" />
    <ImageButton
        android:id="@+id/go"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/datePickerTo"
        app:layout_constraintBottom_toBottomOf="@id/datePickerTo"
        app:layout_constraintLeft_toRightOf="@id/datePickerTo"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="2dp"
        app:tint="@color/appMainDarkBrown"
        android:src="@drawable/ic_baseline_search_24"
        android:background="@drawable/date_back" />
</androidx.constraintlayout.widget.ConstraintLayout>